{
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api",
      "namespaceLayout": "nested",
      "noRestore": true
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "src": "../",
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "NLightning",
      "_appTitle": "NLightning",
      "_appLogoPath": "images/logo_small.png",
      "_appFaviconPath": "images/favicon.ico",
      "_disableContribution": true,
      "_enableSearch": true,
      "pdf": false
    }
  }
}